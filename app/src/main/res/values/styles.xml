<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alarm_clock_preview">
        <item name="android:textSize">@dimen/really_big_text_size</item>
    </style>

    <style name="settings_normal_text">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
    </style>

    <style name="settings_image_view">
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
    </style>

    <style name="settings_checkbox">
        <item name="android:layout_marginEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
    </style>

    <style name="settings_text_holder">
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
    </style>


    <style name="settings_subtitle">
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <dimen name="activity_margin">16dp</dimen>
    <dimen name="bigger_margin">20dp</dimen>
    <dimen name="medium_margin">8dp</dimen>
    <dimen name="settings_label_start_margin">22dp</dimen>
    <dimen name="label_start_margin">72dp</dimen>
    <dimen name="big_margin">24dp</dimen>

    <dimen name="normal_text_size">16sp</dimen>
    <dimen name="medium_text_size">17sp</dimen>
    <dimen name="middle_text_size">19sp</dimen>

    <dimen name="bigger_text_size">16sp</dimen>
    <dimen name="big_text_size">18sp</dimen>
    <dimen name="quite_big_text_size">30sp</dimen>
    <dimen name="really_big_text_size">65sp</dimen>

</resources>